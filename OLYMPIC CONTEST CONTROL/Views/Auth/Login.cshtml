@{
    ViewBag.Title = "Đăng nhập thí sinh";
    Layout = "~/Views/Shared/_Layout.cshtml"; // dùng layout nếu có
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<div class="container" style="max-width: 450px; margin-top: 80px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
            <h3>🎓 Đăng nhập thí sinh</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="form-group mb-3">
                    <label for="username">Tài khoản</label>
                    <input type="text" name="username" class="form-control" required placeholder="Nhập tên đăng nhập" />
                </div>

                <div class="form-group mb-3">
                    <label for="password">Mật khẩu</label>
                    <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu" />
                </div>

                <button type="submit" class="btn btn-success w-100">Đăng nhập</button>
            }
        </div>
        <div class="card-footer text-muted text-center">
            © @DateTime.Now.Year Cuộc thi Olympic Tiếng Anh
        </div>
    </div>
</div>
